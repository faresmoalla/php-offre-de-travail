{% extends 'backBaseAdmin.html.twig' %}
{% block body %}
    <!--button class="btn btn-success btn-icon-split" >
    <a href="{{ path('ajoutercv')  }}"><span class="text" style="color: white">Ajouter </span></a></button-->


    <br><br>
    <div>
        <input  id="myInput"  type="text" placeholder="search">
        <img src="https://img.icons8.com/color/search"/> </div>



    <table class="table table-bordered" id="t"  width="100%" cellspacing="0">
        <thead>
        <tr>
            <th></th>

            <!-- <th>id  </th> -->
            <th>BioCv</th>
            <th> Diplome </th>
            <th>AnneeDiplome</th>
<th>Institut</th>
            <th>Specialite</th>
            <th>image </th>
        <th>IdFreelancer</th>
            <th>Modifier </th>
            <th> Supprimer</th>
        </tr>
        </thead>

        <tbody id="myTable">


        {% for i in tablecv %}
            <tr>



                <td>             <a href="{{ path('pdfcv',{'id': i.id}) }}">  <img   width="30" src="https://cdn-icons-png.flaticon.com/512/337/337946.png">  </a>
                </td>
                <td>{{ i.BioCv }}</td>
                <td>{{ i.Diplome }}</td>

                <td>{{ i.AnneeDiplome }}</td>
                <td>{{ i.Institut }}</td>
                <td>{{ i.Specialite }}</td>
                <td><img src="{{ asset('/images/')}}{{ i.image }}" width="100"  /></td>
                <td>{{ i.IdFreelancer }}</td>

                <td>  <a href="{{ path('modifiercv',{'id': i.id}) }}"  class="btn btn-info btn-icon-split">
                                            <span class="icon text-white-50">
                        <i class="fas fa-info-circle"></i>

                    </span>
                        <span class="text">Modifier</span>

                    </a></td>
                <td><a href="{{ path('supprimercv',{'id': i.id}) }}"><img src="https://img.icons8.com/external-kiranshastry-lineal-color-kiranshastry/344/external-delete-miscellaneous-kiranshastry-lineal-color-kiranshastry.png" style="width:50px;height:50px;" /></a></td>

            </tr>

        {% endfor %}


        </tbody>
        <tbody id="search">
        </tbody>

    </table>

    {{ knp_pagination_render(tablecv) }}

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>



{% endblock %}